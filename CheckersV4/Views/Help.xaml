<Window x:Class="CheckersV4.Views.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersV4.Views"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionColorKey}}"/>
    </Window.Background>
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Name="txtName"  Height="40"  Width="600" FontSize="20" TextWrapping="Wrap"/>
            <TextBlock Name="txtHelp"  Height="260" Width="600" FontSize="16" TextWrapping="Wrap"/>
            <TextBlock Name="txtEmail" Height="40" Width="600" FontSize="20" TextWrapping="Wrap"/>
            <TextBlock Name="txtDetails" Height="40" Width="600" FontSize="20" TextWrapping="Wrap"/>
        </WrapPanel>
    </Grid>
</Window>
